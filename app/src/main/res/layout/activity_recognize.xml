<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="RecognizeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view2"
            android:layout_width="match_parent"
            android:layout_height="571dp"
            android:layout_gravity="center_horizontal"

            android:background="#FFFFFF"
            app:srcCompat="@drawable/ic_main_page"
            tools:srcCompat="@drawable/ic_main_page"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="299dp"
            android:layout_height="112dp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="551dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="297dp"
            android:layout_height="53dp"
            android:text="Recognizing food ingredients..."
            android:textAlignment="center"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="614dp" />
    </LinearLayout>
</RelativeLayout>